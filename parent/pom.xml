                        <source>1.8</source>
                        <target>1.8</target>
                        <showWarnings>true</showWarnings>
                        <optimize>true</optimize>
                        <showDeprecation>false</showDeprecation>
	                <compilerArgs>
	                    <arg>-Xlint:all</arg>
	                    <arg>-Xlint:-serial</arg>
	                    <arg>-Xlint:-try</arg>
	                    <arg>-Xlint:-processing</arg>
	                    <arg>-Xlint:-varargs</arg>
	                    <arg>-Werror</arg>
	                </compilerArgs>
